<!DOCTYPE html>

<html>

	<head>
		<% include head %>
		<link rel="stylesheet" type="text/css" href="/stylesheets/profile.css">
		<title>The Network | Members</title>
	
	</head>
	
	<body>
	
		<div id="wrapper">
		
			<!--HEADER-->
			<header>
			<img class="logo" src="/images/logo01.png" size="100px" height="100px">
				
				<% include nav %>
				
			</header>
			
			<div id="container">
			
				<div id="content-wrap">
				
					<div id="main-header"> <!-- content table row 1-->
					
						<div id="profile"> <!-- header table -->
						
							<div id="user-img"> <!-- header table cell 1-->
								<a href="/images/<%= profile.iconLarge %>" title="Click for full size image" class="avatar"><img src="/images/<%= profile.icon %>" alt="Avatar thumbnail"></a>
							</div>
							
							<div id="bio"> <!--header table cell 2-->
								<div id="bio-wrapper"> <!-- cell 2 wrapper for padding/margin-->
									<h1 id="profile-name"><%= profile.name %></h1>
									
									<p class="profile-info">
										<%= profile.age %> | <%= profile.gender %> | <a href="/map" title="Location">Mount Pearl, NL</a><br>
										<%= profile.birthday %> | <%= profile.phoneNumber %>
									</p>
									<p class="profile-blurb"><%= profile.bio %></p>
								</div> <!--end cell 2 wrapper-->
							</div>
						</div><!--end header table-->
					</div> <!-- end content row 1-->
					
					<div id="main-content"> <!--content table row 2-->
					
						<div id="main-content-wrap"> <!-- wrapper for row content-->
							
							<article id="friends">
								<h2>Friends</h2>
								<ul id="friendlist">
									<li id="friend_1">
										
										<div class="remove">
											<button onclick="removeFriend('friend_1', 'Joseph Gibson')">x</button>
										</div>
										
										<div class="link">
										
											<a href="joe_profile.html" title="Joseph Gibson">
												<div class="friend-img">
													<img class="small-icon" src="../images/icon01.png" alt="Joseph Gibson" >
												</div>
												
												<div class="friend-info">
													<p>Joseph Gibson<br> Memorial University | 20 | St. John's</p>
												</div>
											</a>
										
										</div>
										
									</li>
									
									<li id="friend_2">
										<div class="remove">
											<button onclick="removeFriend('friend_2', 'Dummy Profile')">x</button>
										</div>
										
										<div class="link">
										
											<a href="#" title="Dummy Profile">
												<div class="friend-img">
													<img class="small-icon" src="../images/icon02.png" alt="Dummy Profile" >
												</div>
												
												<div class="friend-info">
													<p>Dummy Profile<br> Some Info |Age | Location</p>
												</div>
											</a>
										
										</div>
										
									</li>
								</ul>
								
								<form id="add-friend">
								
									<div class="tableRow">
										<p class="label"> Member to Add: </p>
										<p class="input"> 
											<select name="members" id="selectMember">
												<option value="" id="default"></option>
												<option value="John Smith" id="John Smith">John Smith</option>
												<option value="Jane Doe" id="Jane Doe">Jane Doe</option>
												<option value="Danielle Gillespie" id="Danielle Gillespie">Danielle Gillespie</option>
												<option value="Joseph Gibson" id="Joseph Gibson">Joseph Gibson</option>
											</select>
										</p>
									</div>
									<div class="tableRow">	
										<p class="label">Address: </p>
										<p class="input">
											<input type="text" name="place" id="place" value=""></input>
										</p>
									</div>
									<div class="tableRow">
										<p class="label">Age: </p>
										<p class="input">
											<input type="text" name="age" id="age" value=""></input>
										</p>
									</div>
									<div class="tableRow">
										<p class="label">Location: </p>
										<p class="input">
											<input type="text" name="location" id="location" value=""></input>
										</p>
									</div>
									<div class="tableRow">
										<p></p>
										<p> 
											<input type="button" id="addFriend" value="Add Friend">
										</p>
									</div>
								</form>
							
							</article>
							
							<aside id="schedule">
						
								<h2>Schedule</h2>
								<p>
									<ul>
										<li>Monday
											<ul class="nested">
												<li>Sociology 4107</li>
												<li>MUCEP</li>
											</ul>
										</li>
										<li>Tuesday
											<ul class="nested">
												<li>Computer Science 3715</li>
												<li>Folklore 3930</li>
												<li>4:00pm Work</li>
											</ul>
										</li>
										<li>Wednesday
											<ul class="nested">
												<li>Sociology 4107</li>
												<li>MUCEP</li>
											</ul>
										</li>
										<li>Thursday
											<ul class="nested">
												<li>Computer Science 3715</li>
												<li>Folklore 3930</li>
												</li>Volunteering
											</ul>
										</li>
										<li>Friday
											<ul class="nested">
												<li>MUCEP</li>
											</ul>
										</li>
									</ul>
								</p>
							</aside>

						</div> <!--end content row 2 wrapper-->
					
					</div> <!-- end content row 2-->
					
					
				</div>
			
			</div>
			
			<!--FOOTER-->
			<footer>
				
				<% include footer %>
			
			</footer>
		
		</div>
	
	</body>
	
</html>